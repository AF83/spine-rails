<h1>New <%= model_class %></h1>

<form>
  <% fields.each do |field| %>
  <label>
    <span><%= field.titleize %></span>
    <input 
      type="text" name="<%= field %>" 
      value="<%%= @<%= field %> %>" required
      <%- if field == fields[0] %> autofocus<% end %>>
  </label>
  <% end %>
  <button>Create</button>

</form>